{
    "name":        "kenshodigital/technical-indicators",
    "description": "Calculates indicators for technical analysis.",
    "type":        "library",
    "homepage":    "https://github.com/kenshodigital/technical-indicators",
    "license":     "MIT",
    "authors":
    [
        {
            "name":  "Jens Scherbl",
            "email": "jens@kensho.digital"
        }
    ],
    "autoload":
    {
        "psr-4":
        {
            "Kensho\\Indicators\\": "./src"
        }
    },
    "autoload-dev":
    {
        "psr-4":
        {
            "Kensho\\Indicators\\Tests\\Integration\\": "./tests/integration",
            "Kensho\\Indicators\\Tests\\Unit\\":        "./tests/unit"
        }
    },
    "require":
    {
        "php":        "^8.2",
        "brick/math": "^0.11"
    },
    "require-dev":
    {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.2"
    },
    "scripts": {
        "phpstan":
        [
            "phpstan"
        ],
        "phpunit":
        [
            "phpunit"
        ],
        "test":
        [
            "phpstan",
            "phpunit"
        ]
    }
}
