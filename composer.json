{
    "name":        "kenshodigital/chart",
    "description": "Calculates indicators for technical chart analysis.",
    "type":        "library",
    "license":     "MIT",
    "keywords":
    [
        "chart",
        "chart analysis",
        "stock",
        "stock chart",
        "stock chart analysis",
        "stock market",
        "stock price",
        "stock price analysis",
        "technical analysis",
        "technical indicator",
        "trend",
        "trend analysis"
    ],
    "support":
    {
        "source": "https://github.com/kenshodigital/chart",
        "issues": "https://github.com/kenshodigital/chart/issues"
    },
    "authors":
    [
        {
            "name": "Jens Scherbl"
        }
    ],
    "autoload":
    {
        "psr-4":
        {
            "Kensho\\Chart\\": "./src"
        }
    },
    "autoload-dev":
    {
        "psr-4":
        {
            "Kensho\\Chart\\Tests\\Integration\\": "./tests/integration",
            "Kensho\\Chart\\Tests\\Unit\\":        "./tests/unit"
        }
    },
    "require":
    {
        "php":        "^8.3",
        "ext-bcmath": "*"
    },
    "require-dev":
    {
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^11.3"
    },
    "scripts": {
        "phpstan":
        [
            "phpstan --memory-limit=-1"
        ],
        "phpunit":
        [
            "phpunit"
        ],
        "test":
        [
            "phpstan",
            "phpunit"
        ]
    }
}
